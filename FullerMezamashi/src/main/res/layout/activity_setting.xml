<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".SettingActivity"
    android:background="@drawable/bg_res">

    <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="50dp"
            android:baselineAligned="false"
            android:id="@+id/linearLayout"
            android:gravity="center_vertical|center_horizontal">

        <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/select_oji"
                android:id="@+id/btnOji"
                android:textSize="15sp" />

        <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/select_alarm"
                android:id="@+id/btnAlarm"
                android:textSize="14sp"
            android:enabled="false" />

        <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/select_stopwatch"
                android:id="@+id/btnSW"
                android:textSize="14sp"
            android:clickable="false"
            android:enabled="false" />

        <Button
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:text="@string/select_timer"
                android:id="@+id/btnTimer"
                android:textSize="14sp"
            android:enabled="false" />
    </LinearLayout>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_alignLeft="@+id/linearLayout"
            android:layout_below="@+id/linearLayout"
            android:layout_marginTop="0dp"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_date"
            android:id="@+id/btnDate"
            android:layout_gravity="left|center_vertical"
            android:layout_marginTop="5dp"
            android:clickable="true"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/choose_time"
            android:id="@+id/btnTime"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

    </LinearLayout>

    <ImageButton
        android:layout_width="fill_parent"
        android:layout_height="400dp"
        android:id="@+id/btnSet"
        android:src="@drawable/oziozi_bal"
        android:scaleType="centerInside"
        android:background="@null"
        android:contentDescription="oziozi"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp" />

    <TextView
        android:layout_width="220dp"
        android:layout_height="80dp"
        android:text="@string/time_alarm"
        android:id="@+id/txtAlarmTime"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_marginBottom="305dp"
        android:layout_centerHorizontal="true"
        android:textSize="10sp"
        android:longClickable="false"
        android:textColor="#ffc787"
        android:gravity="bottom|left" />

    <TextView
        android:layout_width="230dp"
        android:layout_height="80dp"
        android:text="@string/testtime"
        android:id="@+id/txtTime"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_marginBottom="300dp"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:longClickable="false"
        android:gravity="center"
        android:textColor="#ffc787" />

    <TextView
        android:layout_width="310dp"
        android:layout_height="110dp"
        android:text="@string/taphere"
        android:id="@+id/txtClkHere"
        android:gravity="center"
        android:layout_gravity="bottom"
        android:layout_alignBottom="@+id/btnSet"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="25dp" />

</RelativeLayout>
